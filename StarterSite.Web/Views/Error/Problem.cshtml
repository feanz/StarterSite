@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}
<hgroup class="title">
    <h1 class="error">Error</h1>
    <br />
    <h2 class="error">An error occurred while processing your request</h2>
</hgroup>
<p>
    The IT development department We have been made aware of this issue. If the problem
    persists please contact the system Administrator.
</p>
<p>
    If they are unavailable then you can contact the <a href="mailto:application.development@example.com">
        IT development department</a></p>
@if (User.IsInRole("Admin"))
{
    <p>
        <strong>Controller:</strong> @Model.ControllerName
    </p>

    <p>
        <strong>Action:</strong> @Model.ActionName
    </p>
    
    <p>
        <strong>Exception:</strong> @Model.Exception.Message
    </p>
    
    <p>
        <strong>Stack Trace:</strong> @Model.Exception.StackTrace
    </p>
}
